// Los strings o cadenas de texto representan un Texto que se puede asignar a una variable

// Utilizar " " o ' ' nunca mezclar " '
const producto1 = 'Monitor 20 Pulgadas'; 
const producto2 = "Monitor 20 Pulgadas";

//Forma poco uso String()
const producto3 = String('Monitor 24 Pulgadas');
//Otra menara, Crea objeto cadena
const producto4 = new String('Monitos de 30 pulgadas')

// const producto3 = "Monitor 20 Pulgadas';
// Ejemplo con Pulgadas usar barra inclnidada para separar " /""
const producto5 = "Monitor 24\"";

console.log(producto1,producto2,producto3)
console.log(producto4)
console.log(producto5)

const x = 'texto'
const y = 'libro'

// .length   Cantidad  de letras en cadena de texto
console.log(x.length);
//.indexOf  // Posicion del texto en caso de encontrarlo
//.indexOf  // -1 en consola si no lo encuentra 
console.log(x.indexOf('Y'));
/*.includes  Concocer si un texto existe, diferencia mayus y minus
true o false */
console.log(x.includes('Y'));

const z = '                 z              '
// .trimStart elimina espacio inicio
console.log(z.trimStart());
// .trimEnd elimina espacio final
console.log(z.trimEnd());
// .trimStart().trimEnd() elimina espacio inicio final
console.log(z.trimStart().trimEnd());
// .trim elimina espacio inicio final
console.log(z.trim());

//Concatenar
//.concat(x))
console.log(x.concat(y))
//x + ' y ' + x
console.log(x + ' y un ' + y)
//`texto $[x] texto $[y]`
console.log(`esto es un  ${x} y un ${y}`)

const producto = 'Monitor 20 pulgads'

//Replace, Slice y Substring
//.replace permite reemplazar un string
console.log(producto.replace('Pulgadas', '"'));
//.slice para cortar caracteres, si el primer numero es mayor al segundo no hace nada en consola.
console.log(producto.slice(0,3));
//.substring alternativa slice,
/*diferencia entre slice y substring si les pasas un numero mayor de inicio a slice no hace nada
Substring lo modifica e intenta hacer algo*/
console.log(producto.substring(0,4))

//Repeat y Split
//.repeat(cantidad) repetir una cadena de texto x veces, decimales redondea
console.log(producto.repeat(3))
//split dividir un string
console.log(producto.split(" "))

//convertir mayusculas y minisculas
//toUpperCase mayusuculas 
console.log(producto.toUpperCase())
//toLowerCase minisculas
console.log(producto.toLowerCase())




